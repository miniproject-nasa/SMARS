[Unit]
Description=Face Recognition Auto Start
After=network.target sound.target

[Service]
ExecStart=/usr/bin/python3 /home/smars/Desktop/FaceRecog/face.py
WorkingDirectory=/home/smars/Desktop/FaceRecog
User=smars
Restart=always
RestartSec=5

Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/smars/.Xauthority

StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
